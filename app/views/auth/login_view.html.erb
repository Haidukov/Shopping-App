<% provide(:headerTitle, "Login") %>
<%= form_tag 'login' do |form| %>
    <div class='card'>
        <div class='card-body'>
            <div class='form-group'>
                <%= label_tag :email %>
                <%= email_field_tag :username, nil, class: 'form-control' %>
            </div>
            <div class='form-group'>
                <%= label_tag :password %>
                <%= password_field_tag :password, nil, class: 'form-control' %>
            </div>
            <div class='actions'>
                <%= submit_tag 'Login', class:'btn btn-primary' %>
            </div>
        </div>
    </div>
<% end %>